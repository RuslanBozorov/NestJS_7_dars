
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

model User {
  id         Int      @id @default(autoincrement())
  fullname   String   @unique
  email      String   @unique
  contact    String   @unique
  age        Int
  isAdmin    Boolean  @default(false)
  role       Role     @default(USER)
  created_at DateTime @default(now())
  update_at  DateTime @default(now())

  orders Order[]

  @@map("users")
}

model Order {
  id      Int @id @default(autoincrement())
  user_id Int
  count   Int

  usera User @relation(fields: [user_id],references: [id])

  @@map("orders")
}
